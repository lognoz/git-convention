#!/usr/bin/env racket

#|
  This file is to standardizing the commit messages
  https://github.com/lognoz/gitcommit
|#

(require gitcommit)


;; --- Implementation

(define use-substitutions #f)

(define markers default-markers)

(define default-component "Build")

(define components
  (append '(("Make" . #rx"^Makefile$")
            ("Doc" . #rx"^README.md$")
            ("Bin" . #rx"^bin/.+")
            ("Hook" . #rx"^gitcommit/hook/.+")
            ("Core" . #rx".+.rkt$"))
          (generate-components '("*.rkt" "*/*.rkt"))))
